<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--收获地址顶部UI-->
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/address_manager_back_img"
            android:src="@drawable/ac_page_back_arrow_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:gravity="center"
            android:text="收货地址"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address_manager_add_address_text"
            android:text="新增地址"
            android:textColor="@color/dodgerblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--<include layout="@layout/address_unit"/>-->

    <!--<include layout="@layout/address_unit"/>-->

    <!--<include layout="@layout/address_unit"/>-->

    <!--<include layout="@layout/address_unit"/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_manager_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>