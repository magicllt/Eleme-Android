<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--背景自设 最新版没有背景图片了-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--顶上第一行 地址还有扫码天气等UI-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--地址UI-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/address_position_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:editable="false"
                android:ellipsize="end"
                android:maxEms="8"
                android:id="@+id/head_position"
                android:background="#1Affffff"
                android:text="浙江省杭州市临安区"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/re_pop_arrow_down"/>

        </LinearLayout>

        <!--扫码和天气UI-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <!--图标大小通过java中的setCompoundDrawablesWithIntrinsicBounds来控制-->
            <TextView
                android:id="@+id/saoma_icon"
                android:drawableLeft="@drawable/sp_icon_scan_qr_code"
                android:text="扫码"
                android:gravity="center"
                android:background="#1Affffff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <TextView
                android:drawableLeft="@drawable/re_icon_ice"
                android:text="13℃"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>

    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/inputtext_circle"></include>
    </LinearLayout>

    <!--循环播放广告栏ViewPager 此坑待填 先放在这里-->

    <!--一堆图标的分店入口UI 后期高仿的话可能外面要再嵌套一层布局 以实现滑动选项卡的效果-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--第一行  5个一行-->
        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--单个元素-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_1"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="美食"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_2"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="炸鸡汉堡"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_3"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="饮料"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_1"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="美食"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_1"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="美食"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!--第二行  5个一行-->
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--单个元素-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_1"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="美食"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_2"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="炸鸡汉堡"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_3"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="饮料"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_1"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="美食"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="#1Affffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_1"/>
                <TextView
                    android:background="#1Affffff"
                    android:text="美食"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:paddingTop="20dp"
        android:text="推荐商家"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--筛选栏 感觉应该和搜索栏固定 这个还不会 留坑待填-->
    <include layout="@layout/selector" />

    <!--商家粗略展示选项卡-->
    <include layout="@layout/shop_roughly"/>

    <include layout="@layout/shop_roughly"/>

    <!--<include layout="@layout/shop_roughly"/>-->

    <!--底部的选项卡菜单栏-->
    <include layout="@layout/menu_tab_bottom"/>

</LinearLayout>